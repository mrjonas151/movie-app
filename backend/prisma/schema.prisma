datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Movie {
  id              Int           @id @default(autoincrement())
  title           String
  director        String
  duration        Int
  release_year    Int
  category        String
  users           UserFavorites[]
  date_of_include DateTime?     @default(now())
  updated_at      DateTime?     @default(now())

  @@map("Movies")
}

model User {
  id              String         @id
  email           String         @unique
  name            String?
  last_name       String?
  favorites       UserFavorites[]
  date_of_include DateTime?      @default(now())
  updated_at      DateTime?      @default(now())

  @@map("Users")
}

model UserFavorites {
  userId          String
  movieId         Int
  user            User           @relation(fields: [userId], references: [id])
  movie           Movie          @relation(fields: [movieId], references: [id])
  
  @@id([userId, movieId])
  @@map("UserFavorites")
}

